    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    
    <script>
        // Format selection logic
        document.querySelectorAll('.format-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.format-option').forEach(opt => {
                    opt.classList.remove('active');
                });
                this.classList.add('active');
            });
        });

        // Download functionality
        document.getElementById('download-btn').addEventListener('click', function() {
            const videoUrlInput = document.getElementById('video-url');
            const videoUrl = videoUrlInput.value.trim();
            const format = document.querySelector('.format-option.active').getAttribute('data-format');
            const btn = this;
            
            if (!videoUrl) {
                alert('Please enter a video URL');
                videoUrlInput.focus();
                return;
            }

            // Show loading state
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            btn.disabled = true;

            // Logic to handle URL
            // NOTE: This uses a third-party API pattern. These APIs often change or require backend proxies due to CORS.
            // On a static site (like Render Static), this simply redirects the user.
            
            setTimeout(() => {
                if (videoUrl.includes('youtube.com') || videoUrl.includes('youtu.be')) {
                    const videoId = extractYouTubeId(videoUrl);
                    
                    if (!videoId) {
                        alert('Invalid YouTube URL');
                        resetButton(btn, originalText);
                        return;
                    }
                    
                    // Using a common 3rd party downloader pattern (Note: These services may contain ads)
                    // Redirecting user to a downloader service with the ID pre-filled
                    let serviceUrl;
                    if(format === 'mp3') {
                        // Example pattern for MP3
                        serviceUrl = `https://ssyoutube.com/en/`; // Fallback or specific deep link if available
                    } else {
                        // Example pattern for Video
                        serviceUrl = `https://ssyoutube.com/watch?v=${videoId}`;
                    }

                    // For this demo, we will open a new tab searching for the download
                    // Since direct API access from client-side JS is usually blocked by CORS policies on YouTube
                    window.open(serviceUrl, '_blank');
                    
                } else {
                    alert('This demo currently supports YouTube URLs. For other sites, backend implementation is required.');
                }
                
                resetButton(btn, originalText);
            }, 1500); // Fake delay for UX
            
            function resetButton(button, text) {
                button.innerHTML = text;
                button.disabled = false;
            }
            
            function extractYouTubeId(url) {
                const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
                const match = url.match(regExp);
                return (match && match[2].length === 11) ? match[2] : null;
            }
        });
    </script>
