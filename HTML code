    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    
    <script>
        // ==========================================
        //  API CONFIGURATION
        // ==========================================
        const API_KEY = "VDS-KEY-9f1a82c7-44b3-49d9-ae92-8d73f5c922ea-78hD92jKQpL0xF3B6vPz9";
        
        // ⚠️ EDIT THIS: Enter the URL of the API provider you bought the key from
        // Example: 'https://api.rapidapi.com/download' or 'https://vds-api.com/get'
        const API_URL = "YOUR_API_ENDPOINT_HERE"; 
        // ==========================================

        document.querySelectorAll('.format-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.format-option').forEach(opt => {
                    opt.classList.remove('active');
                });
                this.classList.add('active');
            });
        });

        document.getElementById('download-btn').addEventListener('click', async function() {
            const videoUrlInput = document.getElementById('video-url');
            const videoUrl = videoUrlInput.value.trim();
            const format = document.querySelector('.format-option.active').getAttribute('data-format');
            const btn = this;
            const statusDiv = document.getElementById('status-msg');
            
            // Reset Status
            statusDiv.style.display = 'none';
            statusDiv.className = '';

            if (!videoUrl) {
                showStatus('Please enter a video URL', 'error');
                return;
            }

            if (API_URL === "YOUR_API_ENDPOINT_HERE") {
                showStatus('Error: API URL is missing in the code.', 'error');
                alert('Please open the HTML file and replace "YOUR_API_ENDPOINT_HERE" with the real API link.');
                return;
            }

            // UI Loading State
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            btn.disabled = true;

            try {
                // Prepare the API Request
                // Note: Structure depends on your API provider. This is a standard POST request.
                const response = await fetch(API_URL, {
                    method: 'POST', // Or 'GET' depending on documentation
                    headers: {
                        'Content-Type': 'application/json',
                        'x-api-key': API_KEY, // Common header name
                        'Authorization': API_KEY // Alternative header name
                    },
                    body: JSON.stringify({
                        url: videoUrl,
                        format: format
                    })
                });

                if (!response.ok) {
                    throw new Error(`API Error: ${response.status}`);
                }

                const data = await response.json();

                // Logic to extract download link (Adjust 'data.download_link' based on actual API response)
                if (data.download_link || data.url || data.link) {
                    const finalLink = data.download_link || data.url || data.link;
                    
                    // Create invisible download click
                    const a = document.createElement('a');
                    a.href = finalLink;
                    a.download = '';
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    
                    showStatus('Download Started!', 'success');
                } else {
                    showStatus('Could not retrieve download link. Try again.', 'error');
                    console.log('API Response:', data); // Check console for structure
                }

            } catch (error) {
                console.error('Download error:', error);
                
                // FALLBACK: If API fails, try the redirect method
                showStatus('API failed, trying alternate method...', 'error');
                setTimeout(() => {
                    const fallbackUrl = `https://ssyoutube.com/watch?v=${extractYouTubeId(videoUrl)}`;
                    window.open(fallbackUrl, '_blank');
                }, 1500);
            } finally {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });

        function showStatus(msg, type) {
            const el = document.getElementById('status-msg');
            el.textContent = msg;
            el.className = type;
            el.style.display = 'block';
        }

        function extractYouTubeId(url) {
            const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
            const match = url.match(regExp);
            return (match && match[2].length === 11) ? match[2] : null;
        }
    </script>
